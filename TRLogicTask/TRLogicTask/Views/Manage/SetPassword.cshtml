@model TRLogicTask.Models.SetPasswordViewModel

    <div class="form">
        <h3>Создайте локальную учетную запись.</h3>
        <form method="post" asp-action="SetPassword" asp-controller="Manage" asp-antiforgery="true" asp-items="ViewBag.ReturnUrl" class="tab-form active">
            @Html.AntiForgeryToken()

            
            <div class="place-holder">
                <input class="input" type="password" id="NewPassword" name="NewPassword" required>
                <label>введите пароль</label>
                @Html.ValidationMessageFor(m => m.NewPassword, "")
            </div>
            <div class="place-holder">
                <input class="input" type="password" id="СonfirmPassword" name="ConfirmPassword" required>
                <label>введите пароль</label>
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "")
            </div>
            <button type="submit" class="button">Задать пароль</button>
        </form>
    </div>
