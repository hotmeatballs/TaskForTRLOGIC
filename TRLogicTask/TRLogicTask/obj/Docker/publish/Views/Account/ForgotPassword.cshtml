@model TRLogicTask.Models.ForgotPasswordViewModel

<div class="form">
    <h3>Отправка ссылки по электронной почте.</h3>
    <form method="post" asp-action="ForgotPassword" asp-controller="Account" asp-antiforgery="true" asp-items="ViewBag.ReturnUrl" class="tab-form active">
        @Html.AntiForgeryToken()

        <div class="place-holder">
            <input class="input" type="text" id="Email" name="Email" asp-for="Email" required>
            <label>введите ваш e-mail</label>
            @Html.ValidationMessageFor(m => m.Email, "")
        </div>

        <button type="submit" class="button">Отправить</button>
      
    </form>
</div>



