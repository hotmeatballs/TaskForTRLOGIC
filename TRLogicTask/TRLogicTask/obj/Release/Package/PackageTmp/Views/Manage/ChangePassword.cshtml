@model TRLogicTask.Models.ChangePasswordViewModel
<div class="form">
    <h3>Форма для смены пароля.</h3>
    <form method="post" asp-action="ChangePassword" asp-controller="Manage" asp-antiforgery="true" asp-items="ViewBag.ReturnUrl" class="tab-form active">
        @Html.AntiForgeryToken()
        
        <div class="place-holder">
            <input class="input" type="password" id="OldPassword" name="OldPassword" required>
            <label>введите старый пароль</label>
            @Html.ValidationMessageFor(m => m.OldPassword, "")
        </div>

        <div class="place-holder">
            <input class="input" type="password" id="NewPassword" name="NewPassword" required>
            <label>введите новый пароль</label>
            @Html.ValidationMessageFor(m => m.NewPassword, "")
        </div>

        <div class="place-holder">
            <input class="input" type="password" id="СonfirmPassword" name="ConfirmPassword" required>
            <label>повторите новый пароль</label>
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "")
        </div>

        <button type="submit" class="button">Сменить</button>
    </form>
</div>
   
