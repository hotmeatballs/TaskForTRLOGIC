@model TRLogicTask.Models.ResetPasswordViewModel



<div class="form">
    <h3>Cброс пароля.</h3>
<form method="post" asp-action="ResetPassword" asp-controller="Account" asp-antiforgery="true"  class="tab-form active" role="form">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Marker)

    <div class="place-holder">
        <input class="input" type="text" id="Email" name="Email" asp-for="Email" required>
        <label>введите e-mail</label>
        @Html.ValidationMessageFor(m => m.Email, "")

    </div>

    <div class="place-holder">
        <input class="input" type="password" id="Password" name="Password" required>
        <label>введите новый пароль</label>
        @Html.ValidationMessageFor(m => m.Password)

    </div>

    <div class="place-holder">

        <input class="input" type="password" id="ConfirmPassword" name="ConfirmPassword" data-val="true" data-val-equalto="Пароль и его подтверждение не совпадают." data-val-equalto-other="*.Password" required>
        <label>повторите  пароль</label>
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
     
    </div>
    <button type="submit" class="button">сброс</button>
   
</form>
</div>

